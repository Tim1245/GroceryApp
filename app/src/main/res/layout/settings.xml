<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="yes"
        app:srcCompat="@drawable/backgroundrect" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_anchorGravity="center" />

    <ImageView
        android:id="@+id/FAQbtn"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="225dp"
        android:adjustViewBounds="true"
        android:contentDescription="yes"
        app:srcCompat="@drawable/longrect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textSize="22dp"
        android:textColor="#000000"
        app:layout_anchor="@id/FAQbtn"
        app:layout_anchorGravity="center" />

    <ImageView
        android:id="@+id/languagebtn"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="135dp"
        android:adjustViewBounds="true"
        android:contentDescription="yes"
        app:srcCompat="@drawable/longrect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language settings"
        android:textSize="22dp"
        android:textColor="#000000"
        app:layout_anchor="@id/languagebtn"
        app:layout_anchorGravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>